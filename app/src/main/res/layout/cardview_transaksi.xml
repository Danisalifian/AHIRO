<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp"
    android:id="@+id/cvBelumlunas">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Order"
                    android:layout_margin="10dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTanggal"
                    android:text="Tanggal Order"
                    android:layout_margin="10dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Penerima"
                    android:layout_margin="10dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPenerima"
                    android:text="Nama Penerima"
                    android:layout_margin="10dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Harga Produk"
                    android:layout_margin="10dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvHargaproduk"
                    android:text="Total Harga Produk"
                    android:layout_margin="10dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Biaya Kirim"
                    android:layout_margin="10dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBiayakirim"
                    android:text="Biaya Kirim"
                    android:layout_margin="10dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Pembayaran"
                    android:layout_margin="10dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTotalbayar"
                    android:text="Total Pembayaran"
                    android:layout_margin="10dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
            </TableRow>
        </TableLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>