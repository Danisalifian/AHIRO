<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvOrder"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvONamaProduk"
            android:text="Nama Produk"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvOHargasatuan"
            android:layout_below="@id/tvONamaProduk"
            android:text="Rp. Harga satuan"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:layout_marginBottom="20dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvOHargasatuan">

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Jumlah"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvOJumlah"
                    android:textStyle="bold"
                    android:text="Jumlah"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="20dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvOHarga"
                    android:text="Harga"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="20dp"/>
            </TableRow>

        </TableLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>